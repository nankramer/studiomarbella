<section class="hero">
  <div class="page-width hero-grid">
    <div class="hero-content">
      <p class="eyebrow">{{ section.settings.eyebrow }}</p>
      <h1>{{ section.settings.heading }}</h1>
      <p class="hero-copy">{{ section.settings.subheading }}</p>
      <div class="hero-actions">
        <a href="{{ section.settings.primary_link }}" class="button button--primary">{{ section.settings.primary_label }}</a>
        <a href="{{ section.settings.secondary_link }}" class="button button--ghost">{{ section.settings.secondary_label }}</a>
      </div>
    </div>

    <div class="hero-media">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 1600 | image_tag: loading: 'eager', widths: '480,720,960,1200,1600', class: 'hero-image' }}
      {% else %}
        <div class="hero-placeholder">Upload a hero image in Theme Editor</div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Sculptural marble for modern spaces"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Studio Marbella"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Hand-selected marble furniture, lighting, boards and objet designed to elevate everyday interiors."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary button label",
      "default": "Shop Furniture"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary button label",
      "default": "View Marble Boards"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
